{{define "layout"}}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>{{block "title" .}}Math-Gen Demo{{end}}</title>

  <!-- Bulma + Font-Awesome -->
  <link rel="stylesheet"
        href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
  <link rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <link rel="stylesheet" href="/static/site.css">
</head>
<body class="has-background-light">

  <section class="section">
    <div class="container">
      {{ block "content" . }}{{ end }}
    </div>
  </section>

  <script src="https://unpkg.com/htmx.org@1.9.12"></script>

  <!-- ðŸ”¸ placeholder that will receive the snippet -->
  <div id="downloadModal" class="modal"></div>

  <script>
    /* whenever htmx swaps out-of-band into #downloadModal, show it */
    document.body.addEventListener('htmx:oobAfterSwap', (e) => {
      if (e.detail.target.id === 'downloadModal') {
        e.detail.target.classList.add('is-active');
      }
    });

    /* delegate clicks on .modal-background or .delete to close */
    document.addEventListener('click', (ev) => {
      const closeBtn = ev.target.closest('.modal-background, .delete, [data-close-modal]');
      if (closeBtn) {
        closeBtn.closest('.modal').classList.remove('is-active');
      }
    });
  </script>
</body>
</html>
{{end}}